<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutBooking"
    android:orientation="vertical"
    android:background="#fff"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        app:layout_scrollFlags="scroll|exitUntilCollapsed"
        >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                card_view:cardCornerRadius="5dp"
                android:layout_marginTop="-4dp"
                android:layout_height="220dp">
                <ImageView
                    android:layout_marginTop="-4dp"
                    android:src="@drawable/coverfiled"
                    android:layout_width="365dp"
                    android:layout_height="210dp" />


            </android.support.v7.widget.CardView>


        </LinearLayout>


        <LinearLayout
            android:layout_marginLeft="0dp"
            android:layout_marginTop="-80dp"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="center"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="0dp"
                android:src="@drawable/owner"
                android:layout_width="360dp"
                android:layout_height="110dp" />
            <TextView
                android:layout_gravity="center"
                android:textSize="20sp"
                android:textStyle="bold"
                android:id="@+id/textTeamName"
                android:layout_marginLeft="1dp"
                android:textColor="@color/textBtnReg"
                android:layout_marginTop="-3dp"
                android:text="Down Town Sport"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </LinearLayout>


    </LinearLayout>


    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginTop="10dp"
        card_view:cardCornerRadius="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_marginBottom="20dp"
        android:padding="3dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_margin="5dp"
                android:src="@drawable/image_field"
                android:layout_width="80dp"
                android:layout_height="55dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:paddingLeft="5dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:textStyle="bold"
                android:textSize="13sp"
                android:textColor="@color/textBtnReg"
                android:text="Name:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textStyle="bold"
                android:layout_marginTop="25dp"
                android:textSize="13sp"
                android:textColor="@color/textBtnReg"
                android:text="Phone Number:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <TextView
                android:textStyle="bold"
                android:layout_marginTop="25dp"
                android:textSize="13sp"
                android:textColor="@color/textBtnReg"
                android:text="Email:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textStyle="bold"
                android:layout_marginTop="25dp"
                android:textSize="13sp"
                android:textColor="@color/textBtnReg"
                android:text="Chose Field:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textStyle="bold"
                android:layout_marginTop="25dp"
                android:textSize="13sp"
                android:textColor="@color/textBtnReg"
                android:text="Choose Day:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textStyle="bold"
                android:layout_marginTop="25dp"
                android:textSize="13sp"
                android:textColor="@color/textBtnReg"
                android:text="Choose Time:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:layout_marginTop="25dp"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:id="@+id/btnBooking"
                android:background="@drawable/button_radius_blue"
                android:textSize="13sp"
                android:text="Booking Now"
                android:layout_width="90dp"
                android:layout_height="27dp" />


        </LinearLayout>

        <LinearLayout
            android:paddingRight="10dp"
            android:layout_marginLeft="3dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:textStyle="bold"
                android:textColor="@color/textBtnReg"
                android:focusable="true"
                android:singleLine="true"
                android:textColorHint="#9ec4ff"
                android:hint="Name"
                android:layout_marginTop="-1dp"
                android:theme="@style/MyEditTextTheme"
                android:textSize="13sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <EditText
                android:textStyle="bold"
                android:textColor="@color/textBtnReg"
                android:singleLine="true"
                android:theme="@style/MyEditTextTheme"
                android:textColorHint="#9ec4ff"
                android:hint="Phone Number"
                android:layout_marginTop="5dp"
                android:textSize="13sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <EditText
                android:textStyle="bold"
                android:textColor="@color/textBtnReg"
                android:singleLine="true"
                android:theme="@style/MyEditTextTheme"
                android:textColorHint="#9ec4ff"
                android:hint="Email"
                android:layout_marginTop="3dp"
                android:textSize="13sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <EditText
                    android:textStyle="bold"
                    android:textColor="@color/textBtnReg"
                    android:singleLine="true"
                    android:id="@+id/txtfield"
                    android:theme="@style/MyEditTextTheme"
                    android:textColorHint="#9ec4ff"
                    android:hint="Type Field"
                    android:layout_marginTop="3dp"
                    android:textSize="13sp"
                    android:layout_width="115dp"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:id="@+id/field"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/ic_field"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>



            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <EditText
                        android:textStyle="bold"
                        android:textColor="@color/textBtnReg"
                        android:singleLine="true"
                        android:id="@+id/txtday"
                        android:theme="@style/MyEditTextTheme"
                        android:textColorHint="#9ec4ff"
                        android:hint="Select Day"
                        android:layout_marginTop="3dp"
                        android:textSize="13sp"
                        android:layout_width="115dp"
                        android:layout_height="wrap_content" />
                    <EditText
                        android:textStyle="bold"
                        android:textColor="@color/textBtnReg"
                        android:singleLine="true"
                        android:id="@+id/txttime"
                        android:theme="@style/MyEditTextTheme"
                        android:textColorHint="#9ec4ff"
                        android:hint="Select Time"
                        android:layout_marginTop="3dp"
                        android:textSize="13sp"
                        android:layout_width="115dp"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/date"
                        android:layout_marginTop="15dp"
                        android:src="@drawable/ic_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <ImageView
                        android:id="@+id/time"
                        android:layout_marginTop="20dp"
                        android:src="@drawable/ic_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    </android.support.v7.widget.CardView>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>

</FrameLayout>